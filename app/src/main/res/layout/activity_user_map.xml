<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--로딩뷰-->
<RelativeLayout
    android:id="@+id/loading_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loadingbar_backgroud"
    android:clickable="true"
    android:visibility="gone">
    <ProgressBar
        android:id="@+id/prog_bar1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"/>
</RelativeLayout>

<RelativeLayout
    android:id="@+id/user_views"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:visibility="gone">
        <Button
            android:id="@+id/btn_start_geo"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="전투력측정START"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/status_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:visibility="visible">
        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="측정중..."
            android:textSize="50sp"
            android:layout_centerInParent="true"/>
        <Button
            android:id="@+id/btn_stop_geo"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="측정STOP"/>


    </LinearLayout>

</RelativeLayout>

</LinearLayout>